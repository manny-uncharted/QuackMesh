# DuckChain / Web3
WEB3_PROVIDER_URL=http://localhost:8545
DUCKCHAIN_CHAIN_ID=1337
DUCK_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
COMPUTE_MARKETPLACE_ADDRESS=0x0000000000000000000000000000000000000000
TRAINING_POOL_ADDRESS=0x0000000000000000000000000000000000000000
INFERENCE_POOL_ADDRESS=0x0000000000000000000000000000000000000000

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=quackmesh

# Orchestrator
ORCHESTRATOR_API=http://localhost:8000/api

# Server Security & Limits
# Optional API key to protect write endpoints; empty disables auth
API_KEY=
# Requests allowed per minute per identity (JWT sub/API key) or IP
RATE_LIMIT_PER_MINUTE=60
# Sensitive GET throttling per minute per identity/IP
SENSITIVE_GETS_PER_MINUTE=30
# Toggle SQLAlchemy Base.metadata.create_all bootstrap (use 0 when using Alembic)
ENABLE_CREATE_ALL=1

# JWT settings (optional). If JWT_SECRET is empty, JWT auth is disabled.
JWT_SECRET=
JWT_ISSUER=quackmesh
JWT_AUDIENCE=quackmesh
JWT_EXP_MINUTES=60

# Event-driven orchestration (server)
# Auto-assign N provider machines to new jobs created on-chain
AUTO_ASSIGN_ON_EVENT=1
AUTO_ASSIGN_SIZE=2
# Auto-start a training round immediately after assignment
AUTO_START_ROUND_ON_EVENT=1
AUTO_ROUND_STEPS=1
